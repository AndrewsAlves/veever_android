<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/veeverblack"
    android:keepScreenOn="true"
    tools:context="me.custodio.Veever.activity.MainActivity">

    <RelativeLayout
        android:id="@+id/rv_topview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main.layout.top"
        style="@style/ripple_background">

        <ImageButton
            android:id="@+id/tb_activate"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_centerInParent="true"
            android:background="?selectableItemBackgroundBorderless"
            android:scaleType="fitXY"
            android:src="@drawable/rir_button_eye_off" />

        <me.custodio.Veever.views.ColorLottieView
            android:id="@+id/animation_view"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:lottie_loop="true"/>

        <!--<com.kuassivi.component.RipplePulseRelativeLayout-->
            <!--android:id="@+id/pulseLayout1"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="250dp"-->
            <!--app:pulse_layout_RippleStartRadiusPercent="1"-->
            <!--app:pulse_layout_RippleEndRadiusPercent="80"-->
            <!--app:pulse_layout_ShowPreview="true"-->
            <!--app:pulse_layout_PulseType="stroke"-->
            <!--app:pulse_layout_RippleColor="@color/lime1"-->
            <!--app:pulse_layout_PulseDuration="2500"/>-->

       <!-- <com.veever.main.AlexaView
            android:id="@+id/alexaview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" /> -->

    </RelativeLayout>

    <TextView
        android:layout_below="@id/rv_topview"
        android:id="@+id/tv_veever_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app.main.initialised"
        android:textColor="@color/veeverwhite"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textAllCaps="true"
        android:fontFamily="@font/sf_font_heavy"
        android:layout_centerHorizontal="true"/>

    <!-- main screen content -->
    <TextView
        android:id="@+id/tv_user_direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:maxLines="3"
        android:text="@string/app.main.description.center"
        android:textAlignment="center"
        android:textColor="@color/veeverwhite"
        android:layout_below="@id/tv_veever_status"
        android:textSize="18sp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/tv_veever"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/rir_veever_off"
        app:srcCompat="@drawable/rir_veever_off" />

    <ImageButton
        android:visibility="visible"
        android:id="@+id/ib_settings"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/setting_off"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="20dp"
        style="@style/ripple_background"/>

    <FrameLayout
        android:id="@+id/frame_dialog_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp"
        android:layout_above="@id/tv_veever"
        android:layout_below="@id/rv_topview">

        <!-- this code is just to preview fragment -->
       <!-- <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.veever.main.PopUpFragment"
            tools:layout="@layout/fragment_dialog"/> -->

    </FrameLayout>

</RelativeLayout>